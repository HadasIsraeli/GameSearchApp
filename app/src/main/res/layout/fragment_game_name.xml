<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:fontFamily="@font/amarante"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.FragmentGameName">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/StartOverSearchFromNameButton"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/design_button"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="Start Over" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchGameName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="search your game by Name"
            android:textColor="@color/teal_200"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/TextGameName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/amarante"
            android:gravity="bottom|center"
            android:inputType="textPersonName"
            android:text="Write Game Name Here"
            android:textColor="@color/teal_200"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/searchNameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/design_button"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="search" />
    </LinearLayout>

</LinearLayout>